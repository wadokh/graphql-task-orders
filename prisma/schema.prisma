generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Orders {
  id           Int       @id @default(autoincrement())
  shopifyId    String    @map("order_id")
  name         String
  createdAt    DateTime?
  productName  String
  productId    String    @unique
  quantity     Int?
  price        Float?
  currencyCode String?
}
